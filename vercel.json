{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "assets/**", "use": "@vercel/static" },
    { "src": "js/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "RAZORPAY_KEY_ID": "dummy_razorpay_key_id",
    "RAZORPAY_KEY_SECRET": "dummy_razorpay_key_secret",
    "BHARATPE_MERCHANT_ID": "dummy_bharatpe_merchant_id",
    "BHARATPE_API_KEY": "dummy_bharatpe_api_key",
    "GOOGLE_PAY_MERCHANT_ID": "dummy_google_pay_merchant_id",
    "SMTP_HOST": "smtp.gmail.com",
    "SMTP_PORT": "587",
    "SMTP_USER": "support@priticarbon.me",
    "SMTP_PASS": "dummy_password",
    "EMAIL_FROM": "support@priticarbon.me",
    "DATABASE_URL": "mongodb+srv://dummyuser:dummypass@cluster0.mongodb.net/testdb?retryWrites=true&w=majority",
    "JWT_SECRET": "dummy_jwt_secret_key"
  }
}





